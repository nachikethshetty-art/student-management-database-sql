-- Question 1: Display all student records
SELECT * FROM Students;

-- Question 2: Find average score in each subject
SELECT 
    AVG(MathScore) AS AvgMath,
    AVG(ScienceScore) AS AvgScience,
    AVG(EnglishScore) AS AvgEnglish
FROM Students;

-- Question 3: Identify the top-performing student
SELECT Name, 
       (MathScore + ScienceScore + EnglishScore) AS TotalScore
FROM Students
ORDER BY TotalScore DESC
LIMIT 1;

-- Question 4: Count students by grade
SELECT Grade, COUNT(*) AS StudentCount
FROM Students
GROUP BY Grade;

-- Question 5: Average Score by Gender
SELECT Gender, AVG(MathScore) AS AvgMath
FROM Students
GROUP BY Gender;

--Question 6: Identify the students with maths score below 80
SELECT Name, MathScore
FROM Students
WHERE MathScore > 80;

--Question 7: Update any students grade
SELECT StudentID, Name FROM Students;
UPDATE Students
SET Grade = 'A'
WHERE StudentID = 3;
